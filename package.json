{
  "name": "zx-demo",
  "version": "1.0.0",
  "description": "ZX-based website for Nurul Huda (Apon)",
  "main": "index.js",
  "scripts": {
    "dev":"lsof -ti:5882 | xargs -r kill -9 && rm -rf app/.zx && zig build serve &",
    "build:tailwind": "npx @tailwindcss/cli -i app/assets/input.css -o app/assets/style.css",
    "build:tailwind:prod": "npx @tailwindcss/cli -i app/assets/input.css -o app/assets/style.css --minify",
    "w": "npx @tailwindcss/cli -i app/assets/input.css -o app/assets/style.css --watch"
  },
  "devDependencies": {
    "tailwindcss": "^4.0.0",
    "@tailwindcss/cli": "^4.0.0"
  },
  "packageManager": "pnpm"
}