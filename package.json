{
  "name": "zigx.nuhu.dev",
  "version": "1.0.0",
  "description": "ZX-based website for Nurul Huda (Apon)",
  "main": "index.js",
  "scripts": {
    "dev":"lsof -ti:5882 | xargs -r kill -9 && rm -rf site/.zx && zig build serve",
    "build:tailwind": "npx @tailwindcss/cli -i site/assets/input.css -o site/assets/style.css",
    "build:tailwind:prod": "npx @tailwindcss/cli -i site/assets/input.css -o site/assets/style.css --minify",
    "w": "npx @tailwindcss/cli -i site/assets/input.css -o site/assets/style.css --watch"
  },
  "devDependencies": {
    "tailwindcss": "^4.0.0",
    "@tailwindcss/cli": "^4.0.0"
  }
}